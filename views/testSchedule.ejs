<!DOCTYPE html>
<html>
  <head>
    <title>CWRU EMS Supervisor Test Call Schedule</title>
    <link rel="stylesheet" href="/style.css">
    <!-- Include Titillium Web from Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Titillium+Web:wght@400;600&display=swap" rel="stylesheet">
    <style>
      body {
        font-family: 'Titillium Web', sans-serif;
        margin: 20px;
        background-color: #f4f4f4;
      }
      h1 {
        text-align: center;
        font-size: 3em;
        color: #041E42;
      }
      #batch-controls {
        text-align: center;
        font-size: 1.8em;
        font-weight: bold;
        margin-bottom: 10px;
        padding: 10px;
        background-color: #e8e8e8;
        border: 1px solid #ccc;
      }
      table {
        border-collapse: collapse;
        width: 100%;
        background-color: #fff;
        display: block;
        max-height: 80vh;
        overflow: auto;
      }
      th, td {
        padding: 8px;
        text-align: center;
        border: 1px solid #ccc;
        user-select: none;
        color: #000;
      }
      thead th {
        position: sticky;
        top: 0;
        background: #fff;
        z-index: 2;
      }
      tbody td:first-child {
        position: sticky;
        left: 0;
        background: #fff;
        z-index: 1;
      }
      .timeslot {
        cursor: pointer;
      }
      /* Red color scheme for Test Call schedule */
      .assigned-cell {
        background-color: #d32f2f;
        color: #fff;
      }
      .unassigned-cell {
        background-color: #c0c0c0;
      }
      .pending-cell {
        background-color: #f4a7a7;
      }
      .current-day {
        background-color: yellow;
      }
      .btn {
        display: inline-block;
        padding: 8px 16px;
        margin: 4px;
        background-color: #041E42;
        color: #fff;
        text-decoration: none;
        border-radius: 4px;
      }
      .btn:hover {
        background-color: #093263;
      }
    </style>
  </head>
  <body>
    <h1>Supervisor Test Call Schedule</h1>

    <p>
      <a href="/schedule" class="btn">Main Schedule</a> |
      <a href="/admin" class="btn">Admin Panel</a> |
      <a href="/logout">Logout</a>
    </p>

    <div id="batch-controls">
      <% if (isAdmin) { %>
        <label for="targetUserSelect">Assign (Test) shifts for:</label>
        <select id="targetUserSelect">
          <% users.forEach(u => { %>
            <option value="<%= u._id %>">
              <%= u.firstName %> <%= u.lastName %>
            </option>
          <% }); %>
        </select>
      <% } %>
      <button id="saveButton" class="btn">Save Changes</button>
      <button id="cancelButton" class="btn">Cancel Changes</button>
    </div>

    <table border="1">
      <thead>
        <tr>
          <th>Time Slot</th>
          <% dates.forEach(dateStr => {
               let d = new Date(dateStr);
               const daysOfWeek = ["Sunday","Monday","Tuesday","Wednesday","Thursday","Friday","Saturday"];
               let dayOfWeek = daysOfWeek[d.getDay()];
               let month = d.getMonth() + 1;
               let day = d.getDate();
               const todayStr = new Date().toLocaleDateString('en-US');
               const dStr = d.toLocaleDateString('en-US');
          %>
            <th class="<%= todayStr === dStr ? 'current-day' : '' %>">
              <%= dayOfWeek %> - <%= month %>/<%= day %>
            </th>
          <% }); %>
        </tr>
      </thead>
      <tbody>
        <% timeSlots.forEach(slot => { %>
          <tr>
            <td><%= slot %></td>
            <% dates.forEach(date => {
                 const key = date + '||' + slot;
                 const usersAvailable = availMap[key] || [];
                 const isTaken = usersAvailable.length > 0;
                 const currentUserIsAssigned = usersAvailable.some(u => u.id === currentUserId);
                 let displayText = isTaken ? 'Available:' : 'Unassigned:';
                 let namesText = isTaken
                   ? usersAvailable.map(u => (
                       u.firstName + ' ' + (u.lastName && u.lastName.length > 0 ? (u.lastName[0] + '.') : '')
                     )).join(', ')
                   : '';
            %>
              <td
                class="timeslot <%= isTaken ? 'assigned-cell' : 'unassigned-cell' %>"
                data-date="<%= date %>"
                data-slot="<%= slot %>"
                data-assigned="<%= currentUserIsAssigned %>"
                data-taken="<%= isTaken %>"
              >
                <strong><%= displayText %></strong> <%= namesText %>
              </td>
            <% }); %>
          </tr>
        <% }); %>
      </tbody>
    </table>

    <script>
      window.currentUserFirstName = "<%= currentUser.firstName %>";
      window.isAdmin = <%= isAdmin %>;
    </script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/testMain.js"></script>
  </body>
</html>
